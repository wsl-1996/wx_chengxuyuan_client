  width: 140rpx;
  

}
.modal-input {
  width: 400rpx;
  display: flex;
  float: right;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}


.input {
  width: 100%;
  height: 82rpx;
