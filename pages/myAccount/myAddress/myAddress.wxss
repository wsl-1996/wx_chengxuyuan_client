.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 600rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -350rpx 75rpx;
  border-radius: 36rpx;
}

.modal-title {
  padding-top: 30rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
  border-bottom: 1px solid #ddd;
  padding-bottom: 30rpx;
}

.modal-content {
  padding: 30rpx 32rpx;
 
}

.modal-content-item{
  width: 530rpx;
  height: 100rpx;
   position: relative;
}
.modal-content-text{
  position: absolute;
  top: 20rpx;
