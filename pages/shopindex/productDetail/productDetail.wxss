/* pages/shopindex/productDetail/productDetail.wxss */
.no-margin{
  display: block;
}

.goods-swp {
  width: 750rpx;
  height: 500rpx;
}

.goodsbanner {
  width: 750rpx;
  height: 500rpx;
}

.label-one{
  color: #fff;
  width: 80rpx;
  text-align: center;
  background-color: #FF7323;
  margin: 10rpx 10rpx 0 10rpx;
  float: left;
  border-radius: 15rpx;
}

.label-two{
  color: #fff;
  width: 80rpx;
  text-align: center;
  background-color: #FF4D1C;
  margin: 10rpx 10rpx 0 10rpx;
  float: left;
}

.label-three{
  color: #fff;
  width: 80rpx;
  text-align: center;
  background-color: #FF3F2B;
  margin: 10rpx 10rpx 0 10rpx;
  float: left;
  border-radius: 15rpx;
}

.product-info{
  padding:0rpx 20rpx 0 20rpx;
  /* width: 350rpx; */
  line-height: 60rpx;
}

.price-now{
  margin:10rpx 0 20rpx 10rpx;
  font-size: 56rpx;
  color: #FF3911
}

.share-view{
  position: absolute;
  top: 580rpx;
  right: 20rpx;
  width: 70rpx;
  display: flex;
  flex-direction: column;
  color: #515151
}

.comment-view{
  width: 450rpx;
  height: 200rpx;
  /* box-shadow: 5rpx 5rpx 5rpx #ccc; */
  box-shadow:0 0  5rpx 5rpx #ccc;
  position: relative;
  margin: 10rpx;
  display: inline-block;
  
}

.comment-username{
  position: absolute;
  top: 10rpx;
  left: 120rpx;
}

.comment-date{
  position: absolute;
  top: 50rpx;
  left: 120rpx;
}

.comment-container{
  width: 750rpx;
  height: 300rpx;
  display: flex;
  position: relative;
  white-space: nowrap;
}

.comment-content{
  white-space: normal;
}

.comment-title{
  font-size: 30rpx;
  font-weight: bold;
  margin-left: 10rpx;
  color: #999999
}

.footer {
  border-top: 1px solid #ccc;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 0;
  width: 750rpx;
  height: 100rpx;
  background-color: #fff;
  font-size: 36rpx;
}

.font-item1{
  width: 120rpx;
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
  color: #999999;
  justify-content: center;
  align-items: center;
}

.font-item2{
  width: 245rpx;
  height: 80rpx;
  display: flex;
  flex-direction: column;
  font-size: 36rpx;
  color: #fff;
  background-color: #FF4417;
  justify-content: center;
  align-items: center;
  border-top-left-radius: 50rpx;
  border-bottom-left-radius: 50rpx;
  margin-right: 10rpx
}

.font-item3{
  width: 245rpx;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  font-size: 36rpx;
  color: #fff;
  background-color: #FF200E;
  justify-content: center;
  align-items: center;
  border-top-right-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
  margin-left: 1rpx
}

.customservice{
  position: fixed;
  background-color: #fff;
  color: red;
  opacity: 0.6;
  top: 800rpx;
  right: 20rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 80rpx;
  z-index: 1001;
  box-shadow: 0 0 6rpx 6rpx #ccc
}

.productInfo-container{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin: 20rpx 0
}

.productInfo-key{
  width: 250rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: flex-end;
  margin-right: 30rpx;
  color: #515151
}

.productInfo-value{
  width: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  margin-left: 30rpx;
  color: #515151
}

.packstand-container{
  color: #515151;
  width: 640rpx;
  margin: 20rpx 0 20rpx 40rpx;
  padding: 100rpx 20rpx 30rpx 20rpx;
  box-shadow:  0 0 5rpx 5rpx #ccc;
  position: relative;
}
.productInfo-text{
  height: 60rpx;
  line-height: 60rpx;
  /* border-bottom: 1px solid #ddd */
}

.packstand-text{
  width: 150rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  position: absolute;
  top: 20rpx;
  left: -20rpx;
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  background-color: #fff;
  border: 1px solid #ccc
}

.afterSale-container{
  width: 700rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.style-container{
   margin: 20rpx;
}

.style-item{
  color: #999999;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  padding: 5rpx 20rpx;
  margin-right: 20rpx;
}

.active{
  color: #fff;
  background-color: #FF3F2B;
  border:0
}